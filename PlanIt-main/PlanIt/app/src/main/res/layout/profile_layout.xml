<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@drawable/bg">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="118dp" app:srcCompat="@drawable/profile_pic_default"
                android:id="@+id/imageView"
                android:layout_marginTop="35dp" android:textAlignment="center"/>
        <TextView
                android:text="UserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView" android:textColor="#E6E6E6"
                android:textAlignment="center" android:textSize="34sp" android:layout_marginTop="20dp"/>
        <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_width="120dp"
                    android:layout_height="160dp" app:srcCompat="@drawable/silver_trophy"
                    android:id="@+id/imageView8" app:layout_row="2" app:layout_column="2" android:layout_margin="9dp"
                    android:background="@drawable/rounded_corners" android:backgroundTint="#26A69A"/>
            <ImageView
                    android:layout_width="120dp"
                    android:layout_height="160dp" app:srcCompat="@drawable/bronze_trophy"
                    android:id="@+id/imageView5" app:layout_row="2" app:layout_column="0" android:layout_margin="9dp"
                    android:background="@drawable/rounded_corners" android:backgroundTint="#26A69A"/>
            <ImageView
                    android:layout_width="120dp"
                    android:layout_height="160dp" app:srcCompat="@drawable/gold_trophy"
                    android:id="@+id/imageView7" app:layout_row="0" app:layout_column="1" android:layout_margin="9dp"
                    android:background="@drawable/rounded_corners" android:backgroundTint="#26A69A"/>
            <TextView
                    android:text="Bronze\nLeague"
                    android:layout_width="135dp"
                    android:layout_height="80dp" android:id="@+id/textView11" app:layout_row="3"
                    app:layout_column="0" android:textSize="24sp" android:textAlignment="center"
                    android:textColor="#CCFF90"
            />
            <TextView
                    android:text="Gold\nLeague"
                    android:layout_width="135dp"
                    android:layout_height="80dp" android:id="@+id/textView12" app:layout_row="1"
                    app:layout_column="1" android:textSize="24sp" android:textAlignment="center"
                    android:textColor="#CCFF90"
            />
            <TextView
                    android:text="Silver\nLeague"
                    android:layout_width="135dp"
                    android:layout_height="80dp" android:id="@+id/textView13" app:layout_row="3"
                    app:layout_column="2" android:textSize="24sp" android:textAlignment="center"
                    android:textColor="#CCFF90"
            />
        </androidx.gridlayout.widget.GridLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>